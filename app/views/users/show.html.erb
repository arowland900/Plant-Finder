
<h3 class='spacing'></h3>
<h1><%= @user.name %></h1>
<% if @user != current_user %>
    <h3><%= mail_to @user.email, "contact" %></h3>
<% end %>

<div class="row">
  <div class="row">
    <div class="col-md-12">
      <% @user.posts.reverse.each do |p| %>
            <div class="post">  <%= link_to image_tag(p.image.url("medium")), post_path(p.id) %> </div>
      <% end %> 
    </div>
  </div>

  <div class="col-md-4">
    <% if @user == current_user %>
      <h1>New Post</h1>
      <%= form_for @post, url: posts_path, html: { multipart: true } do |form| %>
        <div class="form-group">
          <%= form.label :title %><br>
          <%= form.text_field :title, placeholder: "Title" %><br>
          <%= form.label :description %><br>
          <%= form.text_field :description, placeholder: "Description"%>
          <%= form.file_field :image %><br><br>
        </div>
        <%= form.submit %>
      <% end %>
    <% end %>
  </div>
</div>



