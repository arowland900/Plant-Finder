<h3 class='spacing'></h3>
<h1><%= link_to @post.user.name, "/users/#{@post.user_id}" %> - <%= @post.title %></h1>
<div class="row">
    <div class="col-md-6 small">
        <%= image_tag(@post.image_url, size: 400) %>
    </div>
    <br>
    <div class="col-md-6">
        <%= @post.description %>
        <br>
        <%= mail_to @post.user.email, "contact" %>
    </div>
    <br>
    <% if @post.user == current_user %>
        <%= link_to 'Edit Post', edit_post_path(@post.id), class: 'nav-link' %>
    <% end %>
</div>